{
  "name": "homoglypher",
  "version": "0.1.10",
  "type": "module",
  "main": "./dist_wrappers/index.cjs",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist_wrappers/index.cjs"
    }
  },
  "author": "tonylus",
  "license": "ISC",
  "repository": "https://github.com/TonylusMark1/homoglypher",
  "keywords": [
    "homoglyph",
    "string",
    "unicode",
    "normalization",
    "confusable",
    "ascii"
  ],
  "description": "Normalize homoglyphs to ASCII characters.",
  "devDependencies": {
    "@types/node": "^22.14.0",
    "cli-table3": "^0.6.5",
    "string-width": "^7.2.0",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "tsup --config ./tsup.config.ts",
    "build:examples": "tsup --config ./tsup-examples.config.ts",
    "build:all": "npm run build && npm run build:examples",
    "prepare": "npm run build:all",
    "postinstall": "node ./scripts/update-confusables.js"
  }
}
